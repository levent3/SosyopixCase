
@model List<Photo>
<a asp-action="Create" asp-controller="Photo" class="btn btn-primary">New Photo Add</a>


<div class="card">
    <div class="card-header">
        <h3>MY Photos</h3>
    </div>

    <table class="table table-hover" id="myTable">

        <thead>
            <tr>


                <td></td>
                <td>Title</td>
                <td>Tags</td>
           

                <td></td>
                <td></td>

            </tr>



        </thead>
        <tbody>

            @if (Model.Count==0)
            {
                
                <h2 class="text-center">You Dont have any photos yet:(</h2>


            }
            else
            {
                @foreach (Photo item in Model)
                {

                    <tr class="bg-danger">

                        <td><img src="@item.Image" width="300" height="300"></td>

                        <td>@item.Title</td>
                        <td>@item.Tag</td>


                        <td><a asp-action="Update" asp-controller="Photo" class="btn btn-success" asp-route-Id="@item.Id">Show Detail</a> </td>
                     
                    </tr>

                }

            }
       
        </tbody>
    </table>
</div>