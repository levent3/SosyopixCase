@model PhotoDto

<div class="card">
    <div class="card-header">
        <h3>Yeni Resim</h3>
        <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Photo" method="post" enctype="multipart/form-data">


            <div class="input-group mb-3">
                <input type="text" asp-for="Tag" class="form-control" placeholder="Tag">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" ></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" asp-for="Title" class="form-control" placeholder="Title">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" ></span>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="file" asp-for="ImageFile" />
                </div>



                <button type="submit" class="btn btn-primary" value="Kaydet">Kaydet</button>
        </form>
    </div>
</div>